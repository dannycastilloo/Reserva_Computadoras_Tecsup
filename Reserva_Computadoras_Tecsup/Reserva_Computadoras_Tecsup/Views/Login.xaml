<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.Login"
             xmlns:viewModels="clr-namespace:Reserva_Computadoras_Tecsup.ViewModels"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout BackgroundColor="#448AFF" Padding="30">
            <Image Source="logo.png"
                   Margin="10,40,10,30"/>

            <Frame BackgroundColor="White" Padding="30" HeightRequest="500" CornerRadius="30">
                <StackLayout Margin="10,40,10,30">
                    <Label Text="¡Bienvenido!" HorizontalOptions="Center" TextColor="#448AFF" FontSize="24" Margin="0,10,0,10"/>

                    <Label Text="Correo" Margin="5,40,0,10" TextColor="#9A9A9A"/>
                    <Entry Text="{Binding Usuario.Email}" TextColor="#9A9A9A" FontSize="14"/>

                    <Label Text="Contraseña" Margin="5,40,0,10" TextColor="#9A9A9A"/>
                    <Entry Text="{Binding Usuario.Password}" TextColor="#9A9A9A" FontSize="14" IsPassword="True"/>

                    <Button Command="{Binding IniciarSesionCommand}"
                            Text="Iniciar sesión"
                            BackgroundColor="#448AFF"
                            TextColor="White"
                            CornerRadius="20"
                            Margin="0,40,0,0"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>