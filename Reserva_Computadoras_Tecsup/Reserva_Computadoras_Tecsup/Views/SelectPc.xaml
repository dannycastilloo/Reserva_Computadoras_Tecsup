<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.SelectPc">
    <ContentPage.Content>
        <StackLayout Padding="30">

            <Label Text="Reserva"
                   FontSize="36"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <ListView x:Name="misComputadoras" Margin="0,20,0,20"/>

            <Button Text="Escoger computadora"
                    Clicked="SelectPC"
                    CornerRadius="20"
                    HeightRequest="55"
                    BackgroundColor="#448AFF"
                    />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>