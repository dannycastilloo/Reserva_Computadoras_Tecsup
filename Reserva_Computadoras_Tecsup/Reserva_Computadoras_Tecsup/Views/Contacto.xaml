<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.Contacto">
    <ContentPage.Content>
        <StackLayout Padding="30">
            <Label Text="Contáctanos"
                   FontSize="36"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <Entry Placeholder="Nombre"
                   Margin="0,30,0,10"/>
            <Entry Placeholder="Apellidos"
                   Margin="0,10,0,10"/>
            <Entry Placeholder="Correo electrónico"
                   Margin="0,10,0,10"/>
            <Entry Placeholder="Teléfono"
                   Margin="0,10,0,10"/>
            <Entry Placeholder="Asunto"
                   Margin="0,10,0,10"/>
            <Editor Placeholder="Descripción"
                    HeightRequest="120"
                    Margin="0,10,0,10"/>

            <Button x:Name="enviarMensaje"
                    Text="Enviar mensaje"
                    BackgroundColor="#448AFF"
                    CornerRadius="20"
                    HeightRequest="55"
                    Margin="0,40,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>