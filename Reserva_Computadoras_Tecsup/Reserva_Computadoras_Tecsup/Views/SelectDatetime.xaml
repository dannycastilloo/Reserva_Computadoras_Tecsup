<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.SelectDatetime"
             BackgroundColor="{StaticResource WindowBackgroundColor}">
    <ContentPage.Content>
        <StackLayout Padding="30">

            <Label Text="Reserva"
                   FontSize="36"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalOptions="Center"
                   Margin="0,20,0,40"
                   FontAttributes="Bold"/>

            <Label Text="Elija la hora y la fecha para reservar su computadora" TextColor="#448AFF"/>

            <Image Source="pc.png" Margin="0,20,0,20"/>

            <DatePicker MinimumDate="07/10/2023" MaximumDate="12/24/2023" Format="d" x:Name="datepicker"/>

            <Button Text="Confirmar Reserva"
                    Clicked="Confirmar"
                    BackgroundColor="#448AFF"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    WidthRequest="250"
                    Margin="0,20,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>