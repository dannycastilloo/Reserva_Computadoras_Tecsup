<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.Reservar2">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Reserva"
                   FontSize="36"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20"/>

            <Label Text="Elija la hora y la fecha para reservar su computadora" />

            <Image Source="pc.png"/>

            <Button Text="Confirmar Reserva" Clicked="Confirmar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>