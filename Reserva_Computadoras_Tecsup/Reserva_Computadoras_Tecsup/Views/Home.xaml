<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reserva_Computadoras_Tecsup.Views.Home">
    <ContentPage.Content>
        <StackLayout Padding="30">

            <Label Text="Reserva de Computadoras"
                   FontSize="36"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,20"/>

            <Label Text="Tus reservas"
                   FontSize="20"
                   TextColor="#448AFF"
                   FontFamily="Satoshi"
                   HorizontalTextAlignment="Start"
                   Margin="0,30,0,0"/>
            
            <ScrollView Orientation="Horizontal" Margin="0,10,0,0">
                <StackLayout Orientation="Horizontal">
                    <StackLayout Orientation="Vertical">
                        <Label Text="PC-01 - 16/08" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                        <Image Source="pc.png" WidthRequest="100"/>
                        <Label Text="2:00 PM - 6:00 PM" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Label Text="PC-02 - 16/08" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                        <Image Source="pc.png" WidthRequest="100"/>
                        <Label Text="2:00 PM - 6:00 PM" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Label Text="PC-03 - 16/08" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                        <Image Source="pc.png" WidthRequest="100"/>
                        <Label Text="2:00 PM - 6:00 PM" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical">
                        <Label Text="PC-04 - 16/08" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                        <Image Source="pc.png" WidthRequest="100"/>
                        <Label Text="2:00 PM - 6:00 PM" HorizontalOptions="Center" FontSize="10" TextColor="#1C61CD"/>
                    </StackLayout>
                </StackLayout>
            </ScrollView>


            <StackLayout Orientation="Vertical" Margin="0,60,0,60">
                <Image Source="news.png"/>
                <Label Text="Estudiantes de TECSUP participaron en el CADE 2019. Leer mas en ww.tecsup.edu.pe" TextColor="#448AFF" FontSize="12"/>
            </StackLayout>

            <Button Text="Realizar reserva"
                    Clicked="Reservar"
                    BackgroundColor="#448AFF"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="55"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>